<section id="sec-pricing" class="sec-pricing">
    <div class="container">
        <h1 class="h4 mb-5 text-center">Toutes les possibilités</h1>

        <div class="row justify-content-center">
            <div class="col-md-4">
                <div class="card text-center">
                    <div class="card-block">
                        <h4 class="card-title h5">ARTICLES</h4>

                        

                        <p class="card-text">Visualisez, Ajouter, Modifier, Supprimer vos Articles !</p>


                        <a asp-controller="Articles" asp-action="Index" class="btn btn-primary">Let's Go !</a>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card text-center">
                    <div class="card-block">
                        <h4 class="card-title h5">ETAGERES</h4>

                        

                        <p class="card-text">Visualisez, Ajouter, Modifier, Supprimer vos Etageres !</p>


                        <a asp-controller="Etageres" asp-action="Index" class="btn btn-primary">Let's Go !</a>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card text-center">
                    <div class="card-block justify-content-center">
                        <h4 class="card-title h5">SECTEURS</h4>

                       

                        <p class="card-text">Visualisez, Ajouter, Modifier, Supprimer vos Secteurs !</p>

                        <a asp-controller="Secteurs" asp-action="Index" class="btn btn-primary">Let's Go !</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="row justify-content-center" style="margin-top:2em">
            <div class="col-md-4">

            </div>

            <div class="col-md-4" style="margin-bottom:2em;">
                <div class="card text-center">
                    <div class="card-block">
                        <h4 class="card-title h5">POSITION MAGASIN</h4>

                       

                        <p class="card-text">Gerez la position de vos articles, vous saurez au courant de tout !</p>

                        <a asp-area="" asp-controller="PositionsMagasins" asp-action="Index" class="btn btn-primary">Let's Go !</a>
                    </div>
                </div>
            </div>

            <div class="col-md-4">

            </div>
        </div>
    </div>
