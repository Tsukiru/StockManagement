@model StockManagement.Models.PositionsMagasin

@{
    ViewData["Title"] = "Créer";
}

<h1>Créer</h1>

<h4>Positions magasin</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label>Article</label>
                <select asp-for="ArticleId" class ="form-control" asp-items="ViewBag.ArticleId"></select>
            </div>
            <div class="form-group">
                <label>Etagere</label>
                <select asp-for="EtagereId" class ="form-control" asp-items="ViewBag.EtagereId"></select>
            </div>
            <div class="form-group">
                <label>Quantité</label>
                <input asp-for="Quantite" class="form-control" />
                <span asp-validation-for="Quantite" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Créer" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retour à la liste</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
