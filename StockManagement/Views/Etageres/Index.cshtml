@model IEnumerable<StockManagement.Models.Etagere>

@{
    ViewData["Title"] = "Étagères";
}

    <h1>Étagères</h1>

<p>
    <a asp-action="Create">Ajouter une étagère</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Poid maximum
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Secteur)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PoidsMaximum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Secteur.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Éditer</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Détails</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Supprimer</a>
            </td>
        </tr>
}
    </tbody>
</table>
