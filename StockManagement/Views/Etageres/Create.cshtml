@model StockManagement.Models.Etagere

@{
    ViewData["Title"] = "Créer";
}

    <h1>Créer</h1>

<h4>Étagère</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PoidsMaximum" class="control-label">Poids maximum</label>
                <input asp-for="PoidsMaximum" class="form-control" />
                <span asp-validation-for="PoidsMaximum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SecteurId" class="control-label">Identifiant secteur</label>
                <select asp-for="SecteurId" class ="form-control" asp-items="ViewBag.SecteurId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Créer" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retour à la liste</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
